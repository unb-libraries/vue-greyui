{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "#": [
        "./",
      ],
      "#/*": [
        "./*",
      ],
      "~/*": [
        "../lib/*",
      ],
      "~": [
        "../lib",
      ],
    },
    "jsx": "preserve",
  },
  "include": [
    "../lib/**/*.ts",
    "../lib/**/*.tsx",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue",
  ]
}