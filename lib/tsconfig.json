{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "../dist/types",
    "target": "ES2020",
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "~/*": [
        "./*",
      ],
    },
    "useDefineForClassFields": true,
  },
  "include": [
    "./**/*.ts",
  ]
}